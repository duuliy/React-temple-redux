{
  "extends": "eslint-config-umi",
  "rules": {
    "no-var": 2,
    "eqeqeq": [2, "always"],
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "no-mixed-spaces-and-tabs": [2, false],
    "no-trailing-spaces": 1,
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "space-before-function-paren": [2, "always"],
    "space-infix-ops": 2,
    "object-curly-spacing": [2, "always"],
    "no-multiple-empty-lines": [2, {
      "max": 1
    }]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
